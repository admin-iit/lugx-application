# Analytics Service Environment Variables

# Server Configuration
NODE_ENV=production
PORT=3003

# PostgreSQL Configuration (Primary data storage)
DB_HOST=postgres
DB_PORT=5432
DB_NAME=lugx_gaming
DB_USER=postgres
DB_PASSWORD=postgres123

# ClickHouse Configuration (Analytics data storage)
CLICKHOUSE_URL=http://clickhouse:8123
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=
CLICKHOUSE_DATABASE=analytics

# CORS Configuration (More permissive for analytics)
CORS_ORIGIN=*

# Rate Limiting (More lenient for analytics)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000

# Logging
LOG_LEVEL=info

# Cleanup Configuration
CLEANUP_INTERVAL_HOURS=24
CLEANUP_RETENTION_DAYS=30
